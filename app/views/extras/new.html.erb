<div class="row">
	<div class="col-md-6">
		<h1>New extra</h1>

		<%= render 'form' %>
	</div>
	<div class="col-md-6">
		<h2>All current extras:</h2>
		<% Extra.all.each do |extra| %>
			<%= extra.name %> | $<%= extra.price %><br>
			<%= extra.description %> 
			<%= link_to 'Destroy', extra, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dangerbutton' %>
			<%= link_to 'Edit', edit_extra_path(extra), class:'lesserbutton' %>
			<hr>
		<% end %>
	</div>

<%= link_to 'Back', :back, class:'lesserbutton' %>
</div>