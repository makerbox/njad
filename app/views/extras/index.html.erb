<h1>Listing extras</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Package</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @extras.each do |extra| %>
      <tr>
        <td><%= extra.name %></td>
        <td><%= extra.description %></td>
        <td><%= extra.price %></td>
        <td><%= extra.product.name %></td>
        <td><%= link_to 'Edit', edit_extra_path(extra), class: 'lesserbutton' %></td>
        <td><%= link_to 'Destroy', extra, method: :delete, data: { confirm: 'Are you sure?' }, class: 'lesserbutton' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Extra', new_extra_path, class: 'basicbutton' %>
