<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Capacity</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Street</th>
      <th>Suburb</th>
      <th>City</th>
      <th>State</th>
      <th>Contact name</th>
      <th>Contact number</th>
      <th>Contact email</th>
      <% if current_user.has_role? :admin %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.capacity %></td>
        <td><%= product.longitude %></td>
        <td><%= product.latitude %></td>
        <td><%= product.street %></td>
        <td><%= product.suburb %></td>
        <td><%= product.city %></td>
        <td><%= product.state %></td>
        <td><%= product.contact_name %></td>
        <td><%= product.contact_number %></td>
        <td><%= product.contact_email %></td>
        <% if current_user.has_role? :admin %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.has_role? :admin %>
  <%= link_to 'New Product', new_product_path %>
<% end %>
