<%= simple_form_for(@purchase) do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :price, value: @price %>
  <%= f.hidden_field :product_id, value: @booking.product.id %>
  <%= f.hidden_field :date_selected, value: @booking.date %>
  <%= f.hidden_field :booking_id, value: @booking.id %>
<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-image="http://localhost:3000/assets/logo.png"
          data-amount="<%= @price %>"></script>
<% end %>
