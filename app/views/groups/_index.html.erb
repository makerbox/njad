<% @groups.each do |group| %>
    <%= link_to group, class: 'hollowbutton' do %>
	    <i class='fa fa-users'></i> <%= group.name %>
    <% end %>
    <%= link_to 'Edit', edit_group_path(group), class: 'lesserbutton' %>
    <%= link_to 'Break Connection', group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dangerbutton' %>
  
<% end %>
